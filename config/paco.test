server { 
        listen 80;
        listen 443 ssl;

        server_name paco.test www.paco.test;

        root /var/www/paco.test/html;
        index index.html index.htm index.nginx-debian.html;
        
        ssl_certificate /etc/ssl/certs/paco.test.crt;
        ssl_certificate_key /etc/ssl/private/paco.test.key;

        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers HIGH:!aNULL:!MD5;
        
        location / {
                satisfy all;
                auth_basic "√Årea restringida";
                auth_basic_user_file /etc/nginx/.htpasswd;
                allow 192.168.1.0/24;
                allow 127.0.0.1;
                deny all;
                try_files $uri $uri/ =404;
        }
        
}